	 </head>
	 <body class = "container-fluid">
	 <!-- menu div -->
	 <div id="menu" class="navbar navbar-default fixed-top">
				 <div id="menu-contents" class="container-fluid">
						<a href="/" class="menu-item">HOME</a>
						<a href="/user/dashboard" class="menu-item">DASHBOARD</a>
						<a href="/user/register" class="menu-item">REGISTER</a> 
						<a href=#mainContent class="menu-item">^</a> 
				</div>
	 </div>
	 <!-- menu div -->
	 <!--main content -->
	 <div id="mainContent">
			<div class="formDiv container-fluid" id="loginFormDiv" align="center">
			<!-- 	<h1 class="formHeading">FIND ME A STUDY BUDDY</h1> -->
				<button class="formButton" style="background-color: green;" type="button">FIND ME A STUDY BUDDY FOR ALL MY CLASSES</button>

						<form method='POST' action="/user/findStudyBuddy" id="findStudyBuddyForm">
							 <div>
								<input name="subject" class="formContentSmaller" placeholder="CPSC">
							 <input name="course_code" class="formContentSmaller" placeholder="310">
							 <input name="course_section" class="formContentSmaller" placeholder="101"></div>
<!-- 							 <input class="formButton" type="submit" value="FIND ME A STUDY BUDDY FOR THIS CLASS" style="background-color: turquoise; color:black;"> -->				
								<button id="findStudyBuddyInThisClass" class="formButton" style="background-color: turquoise; color:black;" type="submit">FIND ME A STUDY BUDDY FOR THIS CLASS</button>
						</form>
						<br>
			</div>
			<!-- DIV login Form -->
			<h2 align="center">STUDY BUDDY RESULTS: </h2>
			<h3 style="color: blue;"><%= responseMessage%> </h3>
			<div id="displayMatches" style="margin-bottom: 30px;">
				<!-- usersMatched -->
				<!-- <%= usersMatched%> -->
				<% for (var i in usersMatched) { %> 
				   <% if (usersMatched.hasOwnProperty(i)){ %>
				   	<!-- <%= usersMatched[i].fname %> -->
					<article>
						<p><b><%= usersMatched[i].fname %></b></p>
					</article>
					<% } %>
				<% } %>
			</div>
	 </div>
	 <!--main content -->
	 </body>
	 <!--container -->
</html>